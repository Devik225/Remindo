<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/styles.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Mukta:wght@200;300;400;500;600;700;800&display=swap');
    </style>
</head>
<body>


    
    <div class="wrapper">

        <!-- header -->
        <div class="nav">

            <div class="logo"></div>

            <div class="nav_content">

                <div class="logo_name"> Remindo </div>  

                <div class="day_time"> <%=ejs_date%> 
                    <div class="time"> <%=ejs_time%> </div>
                </div>

            </div>    

        </div>


        <!-- main body -->
        <div class="body_wrap">

            <!-- list name -->
            <div class="list_name">
                <div class="author">Devik's List</div> 
                <img src="img/edit.svg" class="list_edit">
            </div>

            <!-- To do card -->
            <div class="cards">

                <!-- To Do -->
                <div class="todo"> To Do

                    <form action="/" method="POST">
                        <button class="btn_clear" name="clear" value="clearall">clear</button>
                    </form>                   

                    <div class="todo_cnt">

                        <!-- render cards -->
                        <%ejs_data.forEach((data)=>{%>

                            <div class="todo_card" id="tog_crd">

                                <div class="flexme">

                                    <form action="/"  method="POST" class="form_check" >
                                        <button id="btn" class="check_btn" type="submit" name="check" value= <%= data._id%> ></button>
                                    </form>  

                                    <div class="todo_card_title"> <%= data.Title%></div>                                     
                                    <img src="img/expand.svg" alt="" class="img_expand" id= "num">

                                </div>   

                                <div class="todo_card_desc"> 
                                    <span style="margin-top: 0.6vw;"> Description: </span> <%= data.Description%>
                                </div> 

                            </div> 

                        <%})%>
                                
                    </div>       
                                                    
                </div>

                <!-- Compose -->
                <div class="compose">
                    Compose
                    <form action="/" method="POST" class="form_compose">

                        <div class="compose_title">                        
                            <div>Title:</div>
                            <input type="text" name="title" class="inp_box" autocomplete="off">
                        </div>

                        <div class="compose_desc">    
                            <div>Description:</div>
                            <textarea name="desc" id="desc" rows="6" class="inp_box" autocomplete="off"></textarea>
                            <button type="submit" class="btn_submit">+</button>
                        </div>

                    </form>

                </div>

                <!-- Progress -->
                <div class="progress">
                    Progress
                    <div class="progress_data">
                        <div class="progress_cnt">Total tasks decided - </div>
                        <div class="progress_cnt">Tasks completed - </div>
                        <div class="progress_cnt">Tasks pending - </div>
                        <div class="progress_bar" style=" margin-top: 1vw; width: 100%; height: 0.5vw; background-color: white; border-radius: 25px;">
                            <div class="progress_completed" style="width: 55%; height: 0.5vw; background-color: rgb(28, 143, 5); border-radius: 25px;"></div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</body>
</html>